#!/bin/bash

# file information
# name:		gitupd (script)
# location:	/usr/local/bin
# function:	copy files for GITHUB_DIR

GITHUB_DIR="$HOME/github"

# dotfiles
cp -u $HOME/.bashrc "$GITHUB_DIR/dot.bashrc"
cp -u $HOME/.vimrc "$GITHUB_DIR/dot.vimrc"
cp -u $HOME/.config/ranger/rc.conf "$GITHUB_DIR/ranger_rc.conf"

# scripts
cp -u /usr/local/bin/* "$GITHUB_DIR/"

# info files
cp -u $HOME/Dokumente/info/* "$GITHUB_DIR/"

# config files
cp -u $HOME/.config/bpytop/bpytop.conf "$GITHUB_DIR"
cp -u $HOME/.config/htop/htoprc "$GITHUB_DIR/dot.htoprc"
cp -u $HOME/.config/neofetch/config.conf "$GITHUB_DIR/nf_config.conf"
