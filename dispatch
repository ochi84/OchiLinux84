#!/bin/bash

#      _ _                 _       _     
#   __| (_)___ _ __   __ _| |_ ___| |__  
#  / _` | / __| '_ \ / _` | __/ __| '_ \ 
# | (_| | \__ \ |_) | (_| | || (__| | | |
#  \__,_|_|___/ .__/ \__,_|\__\___|_| |_|
#             |_|                        
#
# Script        : dispatch
# Location      : /usr/local/bin/
# Author        : Jens Ochmann
# Description   : Distributes data from the locally cloned GitHub repository to the local system
# Requires root : Yes

# Load config file
CONFIG_FILE="$HOME/.config/sc.conf"
if [[ -f "$CONFIG_FILE" ]]; then
    source "$CONFIG_FILE"
else
    echo -e "${RED}Error: Configuration file not found.${NC}"
    echo -e "${RED}Please ensure the configuration file 'sc.conf' exists at $HOME/.config/${NC}"
    exit 1
fi

# Warn the user about potential overwrites
echo -e "${RED}Warning: This may overwrite key config files. Ensure backups are available.${NC}"
read -p "Do you want to continue? (y/n) " -n 1 -r
echo    # move to a new line
if [[ ! $REPLY =~ ^[Yy]$ ]]
then
    exit 1
fi

echo -e "${YELLOW}Starting dispatch operations...${NC}"

# Copy scripts and config files
for file in "${!DIRS[@]}"; do
    src="$GITHUB_DIR/$file"
    dest="${DIRS[$file]}"

    if [[ $dest == */bin/* ]]; then
        if sudo cp "$src" "$dest" && sudo chmod +x "$dest$file"; then
            echo -e "${YELLOW}Copied scripts and set executable: $file${NC}"
        else
            echo -e "${RED}Failed to copy scripts or set executable: $file${NC}"
        fi
    else
        if cp "$src" "$dest"; then
            echo -e "${YELLOW}Copied config files: $file${NC}"
        else
            echo -e "${RED}Failed to copy config files: $file${NC}"
        fi
    fi
done

# Check if dbus-x11 is installed
if ! dpkg -s dbus-x11 &> /dev/null; then
    echo -e "${YELLOW}Installing dbus-x11...${NC}"
    sudo apt-get install dbus-x11
fi

# Load the configuration file for Tilix
if dconf load '/com/gexperts/Tilix/' < "$GITHUB_DIR/tilix.conf"; then
    echo -e "${YELLOW}Tilix configuration loaded successfully.${NC}"
else
    echo -e "${RED}Failed to load tilix.conf.${NC}"
fi

echo -e "${YELLOW}All files have been copied successfully.${NC}"
