#!/bin/bash

# file information
# name:         dispatch (script)
# location:     /usr/local/bin
# function:     copy all files from github-dir to local location-dirs

# Define directories
declare -A DIRS=(
    [dot.bashrc]="$HOME/.bashrc"
    [dot.vimrc]="$HOME/.vimrc"
    [ranger_rc.conf]="$HOME/.config/ranger/rc.conf"
    [backup]="/usr/local/bin/"
    [gitupd]="/usr/local/bin/"
    [snapcrash]="/usr/local/bin/"
    [update]="/usr/local/bin/"
    [dispatch]="/usr/local/bin/"
)

GITHUB_DIR="$HOME/github"
INFO_DIR="$HOME/Dokumente/info"

# Copy scripts and config files
for file in "${!DIRS[@]}"; do
    src="$GITHUB_DIR/$file"
    dest="${DIRS[$file]}"

    if [[ $dest == */bin/* ]]; then
        sudo cp -u "$src" "$dest"
        sudo chmod +x "$dest$file"
    else
        cp -u "$src" "$dest"
    fi
done

# Copy info files
for info in bashrc_info centwind_info chtermemul_info github_info promptvar_info rangercon_info rangerkey_info vim_info; do
    cp -u "$GITHUB_DIR/$info" "$INFO_DIR/"
done

echo "All files have been copied successfully."
